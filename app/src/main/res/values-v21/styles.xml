<resources>
            <style name="AppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <item name="android:windowDrawsSystemBarBackgrounds">true</item>
            <item name="android:statusBarColor">@android:color/transparent</item>
        </style>


    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:searchIcon">@null</item>
        <item name="android:queryBackground">@null</item>
    </style>

    <style name="ToolbarSearchView" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:searchViewStyle">@style/CustomSearchView</item>
    </style>
</resources>
