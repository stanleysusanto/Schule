<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lytContent"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white">

	<ScrollView
		android:id="@+id/sclAbout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/lytTitleBar"
		android:fadeScrollbars="true">

		<LinearLayout
			android:id="@+id/lytAbout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:padding="10dp">

			<ImageView
				android:id="@+id/imgLogoApp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/icon_launcher"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="10dp"/>
			<TextView
				android:id="@+id/txtAppName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="@color/text"
				android:layout_marginTop="20dp"/>
			<TextView
				android:id="@+id/txtAbout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:gravity="center"
				android:textColor="@color/text"
				android:layout_marginTop="20dp"/>
			<TextView
				android:id="@+id/txtAbout2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="37sp"
				android:gravity="center"
				android:textColor="#8e8282"
				android:layout_marginTop="20dp"/>
			<TextView
				android:id="@+id/txtAbout3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:gravity="center"
				android:textColor="@color/abu1"
				android:layout_marginTop="20dp"/>
			<TextView
				android:id="@+id/txtAbout4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="28sp"
				android:gravity="center"
				android:textColor="@color/abu2"
				android:layout_marginTop="20dp"/>
			<TextView
				android:id="@+id/txtAbout5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="33sp"
				android:gravity="center"
				android:textColor="#aeabab"/>
		</LinearLayout>

	</ScrollView>
</RelativeLayout>
